<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="nu.larka.ambientpresence.FollowNewFragment"
    android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/follow_new_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/follow_new_office"
            style="@style/InfoText"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="12sp">
            
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/search_icon"
            android:contentDescription="Search icon"
            android:scaleType="fitEnd"
            android:labelFor="@id/follow_new_office"
            android:cropToPadding="false"
            android:padding="8dp" />
            
        <EditText
            android:labelFor="@id/follow_new_office"
            android:inputType="text"
            android:id="@+id/office_search"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
            
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
